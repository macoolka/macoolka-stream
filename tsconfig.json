{
  "compilerOptions": {
    "outDir": "./lib",
    "sourceMap": true,
    "declaration": true,
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "noImplicitReturns": false,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "downlevelIteration": true,
    "types": [
      "node",
      "jest",
      "fp-ts"
    ],
    "lib": [
      "esnext",
      "es2018.asynciterable",
      "es6",
      "es2017.object",
      "es2016",
      "es2017",
      "es2015.iterable"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/b/tests",
    "src/**/*.spec.*",
    "src/**/*.test.*"
  ]
}